{% extends "base.jinja2" %}
{% block content %}
<div class="Middle Middle_top">
    <div class="Middle-top">
        <div class="wrap">
            <div class="Middle-header">
            <h3 class="sign-in">{{ _('Восстановление пароля') }} </h3>
            </div>
        </div>
    </div>
    <div class="Section Section_column Section_columnLeft">
        <div class="wrap">
            <div class="Section-content">
                <div class="Profile">
                    {% if validlink %}
                    <p class="form-label">{{ _('Пожалуйста введите (и подтвердите) ваш новый пароль.') }} </p>
                    <form class="form Profile-form" action="#" method="post">
                        <div class="row">
                            <div class="row-block">
                                    {% csrf_token %}
                                    {% if form.non_field_errors %}
                                    {% for error in form.non_field_errors() %}
                                    <div class="form-error">{{ error|escape }}</div>
                                    {% endfor %}
                                    {% endif %}
                                    <div class="form-group">
                                    <label class="form-label" for="{{ form.new_password1.id_for_new_password1 }}">{{ _('Пароль') }}
                                    </label>
                                    {{ form.new_password1 }}
                                    {% if form.new_password1.errors %}
                                        {% for error in form.new_password1.errors %}
                                        <div class="form-error">{{ error|escape }}</div>
                                        {% endfor %}
                                    {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="{{ form.new_password2.id_for_new_password2 }}">{{ _('Подтверждение
                                        пароля') }}
                                        </label>
                                        {{ form.new_password2 }}
                                        {% if form.new_password2.errors %}
                                            {% for error in form.new_password2.errors %}
                                            <div class="form-error">{{ error|escape }}</div>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <div class="Profile-btn">
                                            <button class="btn btn_success" type="submit">{{ _('Сохранить') }}
                                            </button>
                                        </div>
                                    </div>
                            </div>
                            <div class="row-block">
                            </div>
                        </div>
                    </form>
                    {% else %}
                    <h1 class="form-error">{{ _('Сброс пароля не удался') }}</h1>
                    <p class="form-error">{{ _('Ссылка для сброса пароля не рабочая, возможно потому что она была уже использована.
                    Пожалуйста, запросите новый сброс пароля.') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
