{% extends 'base.jinja2' %}

{% block content %}

    <div class="wrapper">
        <div class="header">
            <h3 class="sign-in">{{ _('Регистрация') }}</h3>
        </div>
        <div class="clear"></div>
            <form class="form Profile-form" enctype="multipart/form-data" method="post">
                 {% csrf_token %}
                 {% if form.non_field_errors %}
                     {% for error in form.non_field_errors() %}
                         <div class="form-error">{{ error|escape }}</div>
                     {% endfor %}
                 {% endif %}
                 <div class="form-group">
                     <label class="form-label" for="{{ form.full_name.id_for_full_name }}"
                     </label>
                     {{ form.full_name }}
                     {% if form.full_name.errors %}
                         {% for error in form.full_name.errors %}
                             <div class="form-error">{{ error|escape }}</div>
                         {% endfor %}
                     {% endif %}
                 </div>
                 <div class="form-group">
                     <label class="form-label" for="{{ form.email.id_for_email }}">
                     </label>
                     {{ form.email }}
                     {% if form.email.errors %}
                         {% for error in form.email.errors %}
                             <div class="form-error">{{ error|escape }}</div>
                         {% endfor %}
                     {% endif %}
                 </div>
                 <div class="form-group">
                     <label class="form-label" for="{{ form.phone_number.id_for_phone_number }}">
                     </label>
                     {{ form.phone_number }}
                     {% if form.phone_number.errors %}
                         {% for error in form.phone_number.errors %}
                             <div class="form-error">{{ error|escape }}</div>
                         {% endfor %}
                     {% endif %}
                 </div>
                 <div class="form-group">
                     <label class="form-label" for="{{ form.password1.id_for_password1 }}">
                     </label>
                     {{ form.password1 }}
                     {% if form.password1.errors %}
                         {% for error in form.password1.errors %}
                             <div class="form-error">{{ error|escape }}</div>
                         {% endfor %}
                     {% endif %}
                 </div>
                 <div class="form-group">
                     <label class="form-label" for="{{ form.password2.id_for_password2 }}">
                     </label>
                     {{ form.password2 }}
                     {% if form.password2.errors %}
                         {% for error in form.password2.errors %}
                             <div class="form-error">{{ error|escape }}</div>
                         {% endfor %}
                     {% endif %}
                 </div>
                 <input type="submit" value="{{ _('Зарегистрироваться') }}">
                 <a class="registr" href="{{ url('accounts:login') }}">{{ _('Вход') }}
                 </a>
                 <div class="clear"></div>
            </form>
        </div>
    </div>
{% endblock %}
