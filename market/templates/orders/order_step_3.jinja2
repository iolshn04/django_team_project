{% block step_list %}
  <li class="menu-item">
    <a class="menu-link" href="#">{{ _('Шаг 1. Параметры пользователя') }}</a>
  </li>
  <li class=" menu-item">
    <a class="menu-link" href="#">{{ _('Шаг 2. Способ доставки') }}</a>
  </li>
  <li class="menu-item_ACTIVE menu-item">
    <a class="menu-link" href="#">{{ _('Шаг 3. Способ оплаты') }}</a>
